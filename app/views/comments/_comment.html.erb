<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3>Comments:</h3>
    <% if @comments.count == 0 %>
    <p>Be the first to add a Comment!</p>
    <%else %>
    <% @comments.each do |comment| %>

    <div class="comments">
      <h4><%= link_to comment.user.name, user_path(comment.user.id) %>:  </h4>
      <p><%= comment.content %></p>
      <%= time_ago_in_words(comment.created_at) %> ago
    </div>

      <% if current_user == comment.user %>
      <%= link_to 'Delete comment', [comment.recipe, comment], method: "DELETE" %> |
      <%= link_to 'Edit comment', edit_recipe_comment_path(comment.recipe, comment) %>
      <%end %>

    <%end %>
    <%end %>
    <br>
    <h3>Add a Comment:</h3>
    <%= render 'comments/form' %>
  </div>
</div>
