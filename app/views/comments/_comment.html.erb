<% @comments.each do |comment| %>
<p><%= comment.content %></p>


<% if current_user == comment.user %>
<%= link_to 'Delete comment', [comment.recipe, comment], method: "DELETE" %>
<%= link_to 'Edit comment', edit_recipe_comment_path(comment.recipe, comment) %>
<%end %>

<h4><%= comment.user.name %>  </h4>
<%= time_ago_in_words(comment.created_at) %> ago
<%end %>
<br>
<h3>Add a Comment:</h3>
<%= render 'comments/form' %>
