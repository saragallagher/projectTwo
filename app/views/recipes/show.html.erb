<h1> <%= @recipe.title%> </h1>
<%= link_to 'Return to Profile', user_path(@recipe.user),class: 'btn btn-primary' %>
<% if @recipe.user == current_user %>
<%= link_to 'Edit', edit_recipe_path(@recipe), class: 'btn btn-success'  %>
<%= link_to 'Delete', recipe_path(@recipe), method: 'DELETE',class: 'btn btn-success' %>
<%end %>
<h2>Tags</h2>
<p>
  <%= @recipe.tag_list %>
</p>

<div class="row">
<div class="col-md-3">
<h2>Ingredients</h2>
<p>
  <% @i = @recipe.ingredients %>
  <% @i.each_line do |line| %>
<li> <%= line %> </li>
  <%end %>
</p>
</div>
<div class="col-md-3">
<h2>Instructions</h2>

<p>
  <%= @recipe.instructions %>
</p>
</div>
<div class="col-md-3">
<h2>Difficulty Level </h2>

<p>
  <%= @recipe.difficulty_level %>
</p>
</div>
<div class="col-md-3">
  <h2>Expected Time</h2>
  <p><%= @recipe.time %></p>
</div>
</div>


